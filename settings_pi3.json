{
    "mqtt": {
        "host": "localhost",
        "port": 1883,
        "client_id": "pi3",
        "batch_size": 5,
        "batch_interval_s": 5,
        "default_topic": "iot/pi",
        "qos": 1,
        "retain": false
    },
    "device": {
        "pi_id": "PI3",
        "device_name": "iot-edge-03",
        "location": "Gajba"
    },
    "LCD": {
        "simulated": true,
        "i2c_address": 39,
        "topic": "iot/sensors/lcd"
    },
    "DHT1": {
        "simulated": true,
        "pin": 4,
        "humidity_topic": "iot/sensors/dht1/humidity",
        "temperature_topic": "iot/sensors/dht1/temperature"
    },
    "DHT2": {
        "simulated": true,
        "pin": 5,
        "humidity_topic": "iot/sensors/dht2/humidity",
        "temperature_topic": "iot/sensors/dht2/temperature"
    },
    "DPIR3": {
        "simulated": true,
        "pin": 23,
        "topic": "iot/sensors/pir3"
    },
    "BRGB": {
        "simulated": true,
        "topic": "iot/sensors/rgb",
        "pins": {
            "red": 12,
            "green": 13,
            "blue": 19
        },
        "default_color": "white"
    },
    "IR": {
        "simulated": true,
        "pin": 17,
        "topic": "iot/sensors/ir"
    }
}
